
@{
    ViewBag.Title = "Create a New Color";
}

<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<!-- create the form to place textboxes and mix button into -->
@using (Html.BeginForm("ColorChooser", "Color", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("color1", "Color #1")
        @Html.TextBox("Color1", null, htmlAttributes: new { @class = "form-control", pattern = "#[0-9A-Fa-f]{3,6}", type = "text", required = "required" })
    </div>

    <div class="form-group">
        @Html.Label("color2", "Color #2")
        @Html.TextBox("Color2", null, htmlAttributes: new { @class = "form-control", pattern = "#[0-9A-Fa-f]{3,6}", type = "text", required = "required" })

    </div>

    <br />
    <button class="btn btn-primary" type="submit" value="">Mix Colors!</button>
}

<!-- recieved from ColorController -->
@if (ViewBag.show)
{
    <br/>

    <!-- This is where color boxes will be displayed -->
    <div class="row">
        <div class="col-sm-6" style="@ViewBag.shape1"></div>
        <div class="col-sm-6" style="width:40px; height: 60px;"><h2>+</h2></div>
        <div class="col-sm-6" style="@ViewBag.shape2"></div>
        <div class="col-sm-6" style="width:40px; height: 60px;"><h2>=</h2></div>
        <div class="col-sm-6" style="@ViewBag.shape3"></div>
    </div>
}
