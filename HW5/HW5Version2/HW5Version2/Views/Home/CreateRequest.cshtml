@{
    ViewBag.Title = "Create Request";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<div class="row">
    <div>
        <h3>Tennant Request Form</h3>
    </div>
    <form name="request">
        <!-- first name input-->
        <div class="col-md-6 form-group">
            <label for="input">First Name</label>
            <input type="text" id="fName" name="fName" required />
        </div>
        <!-- last name input-->
        <div class="col-md-6 form-group">
            <label for="input">Last Name</label>
            <input type="text" id="lName" name="lName" required />
        </div>
        <!-- phone number input-->
        <!-- source: http://html5doctor.com/html5-forms-input-types/#input-tel & https://developer.mozilla.org/en-US/docs/Web/HTML/Element/input/tel -->
        <div class="col-md-6 form-group">
            <label for="input">Phone Number</label>
            <input type="tel" id="phoneNum" name="phone" placeholder="123-456-7890" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required />
        </div>
        <!-- appartment name input-->
        <div class="col-md-6 form-group">
            <label for="input">Apartment Name</label>
            <input type="text" id="apName" name="apName" required />
        </div>
        <!-- unit number input-->
        <div class="col-md-6 form-group">
            <label for="input">Unit Number</label>
            <input type="number" id="unitNum" name="unitNum" required />
        </div>
        <!-- request explanation input-->
        <div class="col-lg-12 form-group">
            <textarea rows="7" cols="150" id="infoReq" name="infoReq" placeholder="Please specifically explain your request, maintenance required or complaint." required></textarea>
        </div>
        <button class="btn btn-primary" type="submit" value="Submit">Submit Request</button>
        <br />
        <!-- checkbox for entry -->
        <input type="radio" name="permission" required>Please select here to give permission to landlord or representative to enter your unit. You will be notified with a call.
    </form>
</div>